{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "DiaLogUE",
	"patterns": [
		{
			"include": "#constants"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#speakername"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.dgl",
				"match": "\\[(choice|branch|set|condition|goto|summary)(?=\\s|\\])"
			}]
		},
		"strings": {
			"name": "string.quoted.double.dgl",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.dgl",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"name": "comment.line.dgl",
			"patterns": [
				{
					"name": "comment.line.number-sign.dgl",
					"match": "#.*$"
				}
			]
		},
		"constants": {
			"name": "constants.charcter.escape.dgl",
			"patterns": [
				{
					"name": "constant.language",
					"match": "\\b(true|false)\\b"
				}
			]
		},
		"numbers": {
			"name": "constants.charcter.escape.dgl",
			"patterns": [
				{
					"name": "constant.language",
					"match": "\\b\\d+(\\.\\d+)?\\b"
				}
			]
		},
		"speakername": {
			"name": "entity.speaker.name.dgl",
			"patterns": [
				{
					"name": "constant.numeric",
					"match": "^[A-Za-z0-9_]+(?=:\\s)\\b"
				}
			]
		}
	},
	"scopeName": "source.dgl"
}